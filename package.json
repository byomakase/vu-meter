{
  "name": "@byomakase/vu-meter",
  "version": "1.1.0",
  "description": "A customizable peak meter using the web audio API",
  "main": "./dist/vu-meter.cjs.js",
  "module": "./dist/vu-meter.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite --host",
    "int": "tsc --noEmit && vite build --debug",
    "prod": "tsc --noEmit && vite build --debug",
    "check": "tsc --noEmit",
    "format": "prettier . --write",
    "dev:tsc": "rm -rf dist/lib && tsc --watch",
    "build:prod": "rm -rf dist && tsc --noEmit && vite build --debug",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byomakase/vu-meter.git"
  },
  "bugs": {
    "url": "https://github.com/byomakase/vu-meter/issues"
  },
  "keywords": [
    "web",
    "audio",
    "peak",
    "meter",
    "ppm"
  ],
  "author": "Evan Sonderegger",
  "contributors": [
    {
      "name": "byOmakase",
      "email": "info@byomakase.org",
      "url": "https://player.byomakase.org"
    }
  ],
  "license": "MIT",
  "homepage": "https://player.byomakase.org",
  "dependencies": {
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "sass": "^1.59.2",
    "typescript": "^4.9.5",
    "vite": "5.4.9",
    "vite-plugin-dts": "^2.0.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "chokidar": "^3.5.3",
    "finalhandler": "^1.2.0",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "marked": "^4.3.0",
    "rollup": "^2.63.0",
    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve-static": "^1.15.0",
    "ts-jest": "^29.0.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  }
}